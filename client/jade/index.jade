head
	base(href="/")
	title strolch-app
	meta(name="viewport", content="width=device-width, initial-scale=1")

body(ng-app="app")
	nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
		.container-fluid
			// Brand and toggle get grouped for better mobile display
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse-part', aria-expanded='false')
					span.sr-only toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				span.navbar-brand 
					i.fa.fa-female.fa-lg
					i.fa.fa-child.fa-lg
					i.fa.fa-male.fa-lg
					span strolch-app

			#navbar-collapse-part.collapse.navbar-collapse
				ul.nav.navbar-nav(ng-show="currentUser")
					li(ui-sref-active="active")
						a(ui-sref='alle')
							span Alle
					li(ui-sref-active="active")
						a(ui-sref='print')
							span Alle drucken
					li(ui-sref-active="active")
						a(ui-sref='archived')
							span Archiv
					li(ui-sref-active="active")
						a(ui-sref='neu')
							span Neue Familie
					li(ui-sref-active="active")
						a(ui-sref='tags')
							span Gruppen
					li(ui-sref-active="active")
						a(ui-sref='hours')
							span Stunden-Übersicht
					li(ui-sref-active="active")
						a(ui-sref='ang')
							span ANG-Übersicht	
				ul.nav.navbar-nav.navbar-right
					+loginButtons

	.view(ui-view)
