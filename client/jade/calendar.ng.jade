.container
	.row
		.col-md-3.col-sm-12
			.panel.panel-primary
				.panel-heading 
					h3.panel-title Neuer Termin
				.panel-body
					form(name="addEventForm", novalidate)
						.form-group
							label(for='activity') Titel
							input#activity.form-control(type='text', placeholder='Titel', ng-model="newTitle", ng-required) 
						.form-group
							label(for='date') Datum 
							.input-group
								input#date.form-control(type="text", datepicker-popup="{{format}}", ng-model="newDate", is-open="opened", datepicker-options="dateOptions", close-text="Close", ng-required)
								span.input-group-btn
									button.btn.btn-default(ng-click="open($event)")
										i.glyphicon.glyphicon-calendar

						input.btn.btn-primary.form-control(type="submit", ng-click="addHours(newWork, newDate, newHours)", value="Speichern", ng-disabled="addEventForm.$invalid")

			.panel.panel-primary
				.panel-heading 
					h3.panel-title Terminliste
				.panel-body
					form.hidden-print
						.form-group
							.input-group
								.input-group-addon
									i.glyphicon.glyphicon-search
								input.form-control(type="text", placeholder="Hier kannst du nach allem suchen. Namen, Gruppen, Kindern...", ng-model="search")

		.col-md-9
			.panel.panel-primary
				.panel-heading 
					h3.panel-title Kalender
				.panel-body
					#kitaCalendar.calendar(ui-calendar="calendarConfig.calendar", ng-model="eventSources", calendar="kitaCalendar")
