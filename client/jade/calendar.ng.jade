.container-fluid
	.row
		.col-md-4.col-sm-12
			.panel.panel-primary(ng-if="canEditEvents")
				.panel-heading 
					h3.panel-title Neuer Termin
				.panel-body
					form(name="addEventForm", novalidate)
						.form-group
							input#activity.form-control(type='text', placeholder='Titel', ng-model="newTitle", ng-required) 
						.form-group
							div
								label Terminart
							.radio-inline(ng-repeat="eventType in settings.eventTypes")
								label.event-radio
									input(type="radio", name="optionsEventType", value="{{eventType.key}}", ng-model="$parent.newEventType")
									span.event-radio-label(ng-style="bgColorStyle(eventType.key)") {{ eventType.name }}

						.row
							.col-md-2
								label Von
							.col-md-6
								#dateFrom.input-group
									input.form-control(type="text", datepicker-popup="{{format}}", ng-model="newDateFrom", is-open="openedFrom", datepicker-options="dateOptions", close-text="Close", ng-required)
									span.input-group-btn
										button.btn.btn-default(ng-click="openFrom($event)")
											i.glyphicon.glyphicon-calendar
							.col-md-4
								timepicker(ng-model="newTimeFrom", hour-step="1", minute-step="15", show-meridian="false", show-spinners="false")
						
						.row
							.col-md-12
								label
									input(type="checkbox", ng-model="newDateToEntered")
									span#to-checkbox Bis
										small.text-muted.left-space-5 Aktivieren um einen Termin mit Endedatum anzulegen

						.row
							.col-md-2
							.col-md-6(ng-show="newDateToEntered")
								#dateTo.input-group
									input.form-control(type="text", datepicker-popup="{{format}}", ng-model="newDateTo", is-open="openedTo", datepicker-options="dateOptions", close-text="Close")
									span.input-group-btn
										button.btn.btn-default(ng-click="openTo($event)", ng-disabled="!newDateToEntered")
											i.glyphicon.glyphicon-calendar
							.col-md-4(ng-show="newDateToEntered")
								timepicker(ng-model="newTimeTo", hour-step="1", minute-step="15", show-meridian="false", show-spinners="false", ng-disabled="!newDateToEntered")
	
						input.btn.btn-primary.form-control(type="submit", ng-click="addEvent(newTitle, newEventType, newDateFrom, newDateToEntered, newDateTo, newTimeFrom, newTimeTo)", value="Speichern", ng-disabled="addEventForm.$invalid")

			.panel.panel-primary
				.panel-heading 
					h3.panel-title Terminliste
				.panel-body
					form.hidden-print
						.form-group
							.input-group
								.input-group-addon
									i.glyphicon.glyphicon-search
								input.form-control(type="text", placeholder="Hier kannst du nach Terminen suchen", ng-model="search")
					.event(ng-repeat="event in events | orderBy:'-start' | filter:search", ng-style="bgColorStyle(event.type)")
						div 
							strong {{ event.title }}
							i.fa.fa-lg.fa-trash-o.pull-right(ng-if="canEditEvents", ng-click="deleteEvent(event)")
						div(ng-if="event.start!=event.end && event.end") {{ event.start | date:'dd.MM.yy HH:mm' }} - {{ event.end | date:'dd.MM.yy HH:mm' }}
						div(ng-if="!event.end") {{ event.start | date:'dd.MM.yy HH:mm' }}



		.col-md-8.col-sm-12
			.panel.panel-primary
				.panel-heading 
					h3.panel-title Kalender
				.panel-body
					#kitaCalendar.calendar(ui-calendar="calendarConfig.calendar", ng-model="eventSources", calendar="kitaCalendar")
