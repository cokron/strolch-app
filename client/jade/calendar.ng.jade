.container-fluid
	.row
		.col-md-4.col-sm-12
			.panel.panel-primary
				.panel-heading 
					h3.panel-title Neuer Termin
				.panel-body
					form(name="addEventForm", novalidate)
						.form-group
							label(for='activity') Titel
							input#activity.form-control(type='text', placeholder='Titel', ng-model="newTitle", ng-required) 
						.form-group
							label Terminart
							.radio
								label#radioCLOSED
									input(type="radio", name="optionsEventType", value="CLOSED", ng-model="newEventType")
									| Schließzeit
							.radio
								label#radioEVENT
									input(type="radio", name="optionsEventType", value="EVENT", ng-model="newEventType")
									| Event
							.radio
								label#radioJUBI
									input(type="radio", name="optionsEventType", value="JUBI", ng-model="newEventType")
									| Jubiläum
						.form-group
							label Von
							.row
								.col-md-8
									#dateFrom.input-group
										input.form-control(type="text", datepicker-popup="{{format}}", ng-model="newDateFrom", is-open="openedFrom", datepicker-options="dateOptions", close-text="Close", ng-required)
										span.input-group-btn
											button.btn.btn-default(ng-click="openFrom($event)")
												i.glyphicon.glyphicon-calendar
								.col-md-4
									timepicker(ng-model="newTimeFrom", hour-step="1", minute-step="15", show-meridian="false", show-spinners="false")
	
						.form-group
							label Bis
							.row
								.col-md-8
									#dateTo.input-group
										input.form-control(type="text", datepicker-popup="{{format}}", ng-model="newDateTo", is-open="openedTo", datepicker-options="dateOptions", close-text="Close", ng-required)
										span.input-group-btn
											button.btn.btn-default(ng-click="openTo($event)")
												i.glyphicon.glyphicon-calendar
								.col-md-4
									timepicker(ng-model="newTimeTo", hour-step="1", minute-step="15", show-meridian="false", show-spinners="false")
	
						input.btn.btn-primary.form-control(type="submit", ng-click="addEvent()", value="Speichern", ng-disabled="addEventForm.$invalid")

			.panel.panel-primary
				.panel-heading 
					h3.panel-title Terminliste
				.panel-body
					form.hidden-print
						.form-group
							.input-group
								.input-group-addon
									i.glyphicon.glyphicon-search
								input.form-control(type="text", placeholder="Hier kannst du nach allem suchen. Namen, Gruppen, Kindern...", ng-model="search")

		.col-md-8.col-sm-12
			.panel.panel-primary
				.panel-heading 
					h3.panel-title Kalender
				.panel-body
					#kitaCalendar.calendar(ui-calendar="calendarConfig.calendar", ng-model="eventSources", calendar="kitaCalendar")
