.container
	.row
		.col-md-12
			.panel.panel-primary
				.panel-heading
					h3.panel-title.pull-left Stunden√ºbersicht
					#yearPaging.input-group
						span.input-group-btn
							button.btn.btn-info(ng-click="goToPreviousYear()")
								span.glyphicon.glyphicon-chevron-left
						input.form-control(type="text", ng-model="currentYearString", readonly)
						span.input-group-btn
							button.btn.btn-info(ng-click="goToNextYear()")
								span.glyphicon.glyphicon-chevron-right
				.panel-body
					.table-responsive
						table.table.table-bordered.table-striped.table-condensed
							thead
								tr
									td Familie
									td Stundenzahl
							tfoot
								tr
									td
										strong Summe
									td 
										strong {{ hoursSum }}
							tbody
								tr(ng-repeat='hour in hours')
									td {{ hour.familyName }}
									td {{ hour.hours }}

