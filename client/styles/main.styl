body
  padding-top: 70px

@media print
  a[href]:after
    content: none

.left-space-5
  margin-left: 5px

.top-space-5
  margin-top: 5px

.top-space-10
  margin-top: 10px

#saveButton
  width: 100%

#settings
  height: 100px

#draw
  width: 150px

.prop-value
  font-weight: bold

.prop-name
  color: "#333"
  min-width: 80px

.bigger-text
  font-weight: bold

/* svg */
.tz_circle
  stroke: "yellow"
  stroke-width: 1
  fill: "transparent"

.tag-start
  margin-left: 3px
  margin-right: 3px

.tag-name
  margin-right: 2px
  
.tag-edit
  margin-top: 4px
  
.alle-table
  margin: 3px

// do not show password change button
#login-buttons-open-change-password
  display: none
  
.allergy-hint
  margin-left: 10px
  margin-right: 4px
  
.add-hours-link
.edit-family-link
  margin-left: 5px
  
#yearPaging
  width: 200px
  margin-left: auto
  
  input
    text-align: center

.hours-progress
  margin-bottom: 0

.hours-hours-column
  width: 70%
  vertical-align: middle !important
  
.hours-family-column
  width: 30%
  vertical-align: middle !important
  
.alle-action-buttons
  width: 100px

.family-name
  font-weight: bold
  font-size: large

.emergency-contacts
  padding: 5px
  background-color: #ffdada
  border: 1px solid #e3e3e3
  border-radius: 4px
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05)
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05)

.child
  margin: 3px
  padding: 4px
  background-color: #d7d7d7
  border: 1px solid #e3e3e3
  border-radius: 3px
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05)
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05)

.ang-table
  max-width: 1500px